@page
@model ASDeckBuilder.Pages.AdminDecks.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Decks[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Decks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DeckId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DeckId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DeckId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
