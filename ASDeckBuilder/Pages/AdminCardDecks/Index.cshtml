@page
@model ASDeckBuilder.Pages.AdminCardDecks.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardDecks[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardDecks[0].Card)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardDecks[0].Decks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CardDecks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Card.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Decks.DeckId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CardDeckId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CardDeckId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CardDeckId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
